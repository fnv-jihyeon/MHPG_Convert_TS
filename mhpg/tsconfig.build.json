  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types",
    "noEmit": false
  },
  "include": [
    "src/assets/data/**/*.ts",  
    "src/utils/**/*.ts"
